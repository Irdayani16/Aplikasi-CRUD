<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>

  <%if (typeof(error) !== "undefined" && error === true) { %>
    <div class="alert alert-danger" role="alert">
      <%= messages %>
    </div>
  <% } %>

  <%if  (typeof(messages) !== "undefined" && typeof(messages) !== "undefined" && error === false) { %>
    <div class="alert alert-success" role="alert">
      <%= messages %>
    </div>
  <% } %>

  <form action="/update/<%= result.slug_id %>" method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Nama produk</label>
      <input value="<%= result.name %>" name="productname" class="form-control" placeholder="Masukkan nama produk">
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Description</label>
      <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"><%= result.description %></textarea>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Harga</label>
      <input value="<%= result.price %>" name="price" class="form-control" placeholder="Masukkan harga">
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Kategori</label>
      <input value="<%= result.category %>" name="category" class="form-control" placeholder="Masukkan kategori">
    </div>

    <button type="submit" class="btn btn-primary mb-2">Simpan</button>
  </form>

</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>